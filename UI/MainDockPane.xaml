<UserControl x:Class="SphericalImageViewer.UI.MainDockPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0078D4" Padding="16,8">
            <TextBlock Text="Spherical Image Viewer" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Connection Panel -->
        <GroupBox Grid.Row="1" Header="Server Connection" Margin="8">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Server URL:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" Text="{Binding ServerUrl}" Margin="0,0,8,0"/>
                <Button Grid.Column="2" Content="Connect" 
                        Command="{Binding ConnectCommand}"
                        Style="{StaticResource ModernButton}"/>
            </Grid>
        </GroupBox>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Image Viewer -->
            <GroupBox Grid.Column="0" Header="Image Viewer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="8">
                        <Button Content="⏮" Width="40" Style="{StaticResource ModernButton}"/>
                        <Button Content="◀" Width="40" Style="{StaticResource ModernButton}"/>
                        <TextBlock Text="Frame: 1/100" VerticalAlignment="Center" Margin="12,0"/>
                        <Button Content="▶" Width="40" Style="{StaticResource ModernButton}"/>
                        <Button Content="⏭" Width="40" Style="{StaticResource ModernButton}"/>
                    </StackPanel>

                    <!-- Image Display - FIXED: Removed ZoomMode -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" 
                            Background="Black" Margin="8">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto"
                                      CanContentScroll="True">
                            <Image Name="MainImage" 
                                   Source="{Binding CurrentImage}" 
                                   Stretch="Uniform"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="4" Background="LightGray"/>

            <!-- Control Panel -->
            <StackPanel Grid.Column="2" Margin="8,0,0,0">

                <!-- Camera Controls -->
                <GroupBox Header="Camera Controls" Margin="0,0,0,8">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Yaw:" Margin="0,0,8,4"/>
                        <Slider Grid.Row="0" Grid.Column="1" Minimum="-180" Maximum="180" 
                                Value="{Binding Yaw}" TickFrequency="30" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Pitch:" Margin="0,0,8,4"/>
                        <Slider Grid.Row="1" Grid.Column="1" Minimum="-90" Maximum="90" 
                                Value="{Binding Pitch}" TickFrequency="15" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Roll:" Margin="0,0,8,4"/>
                        <Slider Grid.Row="2" Grid.Column="1" Minimum="-180" Maximum="180" 
                                Value="{Binding Roll}" TickFrequency="30" Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="FOV:" Margin="0,0,8,4"/>
                        <Slider Grid.Row="3" Grid.Column="1" Minimum="30" Maximum="180" 
                                Value="{Binding Fov}" TickFrequency="15" Margin="0,0,0,8"/>

                        <Button Grid.Row="4" Grid.Column="1" Content="Reset View" 
                                Style="{StaticResource ModernButton}"/>
                    </Grid>
                </GroupBox>

                <!-- Detection Controls -->
                <GroupBox Header="Object Detection">
                    <StackPanel Margin="8">
                        <TextBlock Text="Model:"/>
                        <ComboBox ItemsSource="{Binding AvailableModels}" 
                                  SelectedItem="{Binding SelectedModel}" Margin="0,4,0,8"/>

                        <TextBlock Text="Detection Text:"/>
                        <TextBox Text="{Binding DetectionText}" Margin="0,4,0,8"/>

                        <Button Content="Run Detection" 
                                Command="{Binding RunDetectionCommand}"
                                Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="LightGray" Padding="8,4">
            <TextBlock Text="{Binding StatusMessage}"/>
        </Border>

    </Grid>
</UserControl>