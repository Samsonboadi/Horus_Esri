<!-- UI/SettingsDialog.xaml -->
<Window x:Class="SphericalImageViewer.UI.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Server Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Server URL:" Margin="0,5"/>
            <TextBox Name="ServerUrlTextBox" Text="http://192.168.6.100:5050" Margin="0,0,0,10"/>

            <TextBlock Text="Image Directory:" Margin="0,5"/>
            <TextBox Name="ImageDirectoryTextBox" Text="/web/images/" Margin="0,0,0,10"/>

            <TextBlock Text="Default Model:" Margin="0,5"/>
            <ComboBox Name="ModelComboBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="GroundingLangSAM"/>
                <ComboBoxItem Content="GroundingDino"/>
                <ComboBoxItem Content="YoloWorld"/>
                <ComboBoxItem Content="SAM_V2"/>
                <ComboBoxItem Content="Florence2"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>